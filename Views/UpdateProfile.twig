<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Update Profile</title>
</head>
<body>
<h3>Update Profile</h3>

{% for profile in profiles %}
<form action="SetProfile.php" method="post">
    <table>
        <tr>
            <td><input type="hidden" name="id" value="{{profile.Id}}"/></td>
        </tr>
        <tr>
            <td>Username:</td>
            <td><input type="text" name="uname" value="{{profile.Uname}}"/></td>
        </tr>
        <tr>
            <td>Password:</td>
            <td><input type="text" name="upass" value="{{profile.Upass}}"/></td>
        <tr>
        <tr>
            <td>Full Name:</td>
            <td>
                <input type="text" name="fullname" value="{{profile.Fullname}}"/></td>
        </tr>
        <tr>
            <td>Role:</td>
            <td>
                <input type="number" step="0.01" name="role" value="{{profile.Role}}"/></td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input style="width: 100%" type="submit" value="Update"/>
            </td>
        </tr>
    </table>
</form>
{% endfor %}
</body>
</html>